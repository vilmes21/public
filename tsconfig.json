{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": false,
    "pretty": false,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "rootDir": "src/",
    "outDir": "./dist"
  },
  "include": ["src/"],
  "exclude": ["./node_modules"]
}
